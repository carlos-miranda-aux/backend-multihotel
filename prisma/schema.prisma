// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==========================================
// üè® 1. MODELO DE HOTEL (TENANT)
// ==========================================
model Hotel {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique // Ej: "Crown Paradise Canc√∫n"
  codigo      String    @unique // Ej: "CPC-CUN"
  direccion   String?
  logoUrl     String?
  activo      Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime? // Soft Delete

  // Relaciones: Un hotel es due√±o de todo esto
  users       UserSistema[] // Usuarios que hacen LOGIN (Admin, Soporte, etc.)
  staff       User[]        // Usuarios del STAFF (Empleados que reciben equipos)
  departments Department[]
  devices     Device[]
  areas       Area[]
  maintenances Maintenance[]
}

// ==========================================
// üë§ 2. USUARIOS Y ROLES (LOGIN)
// ==========================================

enum Rol {
  SUPER_ADMIN   // Root / Dev (Global)
  CORP_VIEWER   // Auditor√≠a Global (Solo lectura)
  HOTEL_ADMIN   // Jefe de Sistemas (Local)
  HOTEL_AUX     // Auxiliar / Editor (Operativo)
  HOTEL_GUEST   // Practicante / Invitado (Solo lectura/b√°sico)
}

model UserSistema {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  email     String?   @unique
  nombre    String?
  rol       Rol       @default(HOTEL_GUEST)
  
  // Si es NULL = Usuario Global. 
  // Si tiene ID = Usuario restringido a ese Hotel.
  hotel     Hotel?    @relation(fields: [hotelId], references: [id])
  hotelId   Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? 

  auditLogs AuditLog[]

  @@index([hotelId])
}

// ==========================================
// üì¶ 3. ESTRUCTURA ORGANIZACIONAL
// ==========================================

model Department {
  id        Int       @id @default(autoincrement())
  nombre    String
  
  // Multi-tenant
  hotel     Hotel     @relation(fields: [hotelId], references: [id])
  hotelId   Int

  deletedAt DateTime?
  areas     Area[]

  // El nombre "Sistemas" se puede repetir en diferentes hoteles, pero no en el mismo
  @@unique([nombre, hotelId]) 
}

model Area {
  id             Int        @id @default(autoincrement())
  nombre         String
  
  // Multi-tenant
  hotel          Hotel      @relation(fields: [hotelId], references: [id])
  hotelId        Int

  departamento   Department @relation(fields: [departamentoId], references: [id])
  departamentoId Int
  
  deletedAt      DateTime?
  users          User[]     
  devices        Device[]

  @@unique([nombre, departamentoId, hotelId])
}

// ==========================================
// ‚öôÔ∏è CAT√ÅLOGOS GLOBALES (EST√ÅNDARES)
// ==========================================
// Estos NO llevan hotelId porque "Windows 11" es igual en todos los hoteles.

model OperatingSystem {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  deletedAt DateTime?
  devices   Device[]
}

model DeviceType {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  deletedAt DateTime?
  devices   Device[]
}

model DeviceStatus {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  deletedAt DateTime?
  devices   Device[]
}

// ==========================================
// üìã 4. STAFF (EMPLEADOS) Y EQUIPOS
// ==========================================

model User { // Empleados del hotel (Usuarios finales, NO del sistema)
  id              Int       @id @default(autoincrement())
  nombre          String
  correo          String?
  usuario_login   String?
  es_jefe_de_area Boolean   @default(false)
  
  area            Area?     @relation(fields: [areaId], references: [id])
  areaId          Int?
  
  // Pertenencia al Hotel
  hotel           Hotel     @relation(fields: [hotelId], references: [id])
  hotelId         Int

  created_at      DateTime  @default(now())
  deletedAt       DateTime?

  devices Device[]

  @@index([areaId])
  @@index([hotelId])
}

model Device {
  id                       Int       @id @default(autoincrement())
  
  // üî• PROPIEDAD DEL HOTEL
  hotel                    Hotel     @relation(fields: [hotelId], references: [id])
  hotelId                  Int

  etiqueta                 String?
  nombre_equipo            String
  descripcion              String?
  comentarios              String?   @db.Text
  ip_equipo                String?
  perfiles_usuario         String?
  
  usuario                  User?     @relation(fields: [usuarioId], references: [id])
  usuarioId                Int?
  
  area                     Area?     @relation(fields: [areaId], references: [id])
  areaId                   Int?
  
  tipo                     DeviceType @relation(fields: [tipoId], references: [id])
  tipoId                   Int
  
  marca                    String
  modelo                   String
  numero_serie             String    
  
  estado                   DeviceStatus @relation(fields: [estadoId], references: [id])
  estadoId                 Int
  
  sistema_operativo        OperatingSystem? @relation(fields: [sistemaOperativoId], references: [id])
  sistemaOperativoId       Int?
  
  // Datos extra
  licencia_so              String?
  office_version           String?
  office_tipo_licencia     String?
  office_serial            String?
  office_key               String?
  es_panda                 Boolean   @default(false)

  // Garant√≠a y Mantenimiento
  garantia_inicio          DateTime?
  garantia_fin             DateTime?
  garantia_numero_producto String?
  garantia_numero_reporte  String?
  garantia_notes           String?   @db.Text
  fecha_proxima_revision   DateTime?

  // Bajas
  fecha_baja               DateTime?
  motivo_baja              String?   @db.VarChar(191)
  observaciones_baja       String?   @db.Text

  created_at               DateTime  @default(now())
  updated_at               DateTime  @updatedAt
  deletedAt                DateTime?

  maintenances Maintenance[]

  @@index([hotelId])
  @@index([usuarioId])
  // Permitimos el mismo SN solo si es en hoteles diferentes
  @@unique([numero_serie, hotelId]) 
}

model Maintenance {
  id                  Int       @id @default(autoincrement())
  descripcion         String
  fecha_programada    DateTime?
  fecha_realizacion   DateTime?
  estado              String    @default("pendiente")
  tipo_mantenimiento  String    @default("Preventivo") 
  
  diagnostico         String?   @db.Text
  acciones_realizadas String?   @db.Text
  observaciones       String?   @db.Text
  
  device              Device    @relation(fields: [deviceId], references: [id])
  deviceId            Int
  
  // Aunque se infiere por Device, tener hotelId aqu√≠ ayuda a filtrar reportes r√°pido
  hotel               Hotel     @relation(fields: [hotelId], references: [id])
  hotelId             Int

  deletedAt           DateTime?

  @@index([deviceId])
  @@index([hotelId])
}

// ==========================================
// üìù 5. AUDITOR√çA
// ==========================================

model AuditLog {
  id          Int          @id @default(autoincrement())
  action      String       
  entity      String       
  entityId    Int        
  oldData     Json?
  newData     Json?
  details     String?
  ipAddress   String?      
  userAgent   String?
  createdAt   DateTime     @default(now())

  userId      Int?
  user        UserSistema? @relation(fields: [userId], references: [id])
  
  hotelId     Int?         // Para filtrar auditor√≠a por hotel

  @@index([userId])           
  @@index([hotelId])        
}