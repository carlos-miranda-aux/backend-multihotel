generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique 
  codigo      String    @unique 
  direccion   String?
  ciudad      String?   // Campo nuevo para el formato de resguardo
  razonSocial String?   
  diminutivo  String?
  logoUrl     String?
  activo      Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  // Relaciones
  users       UserSistema[] 
  
  staff       User[]        
  departments Department[]
  devices     Device[]
  areas       Area[]
  maintenances Maintenance[]
}

enum Rol {
  ROOT
  CORP_VIEWER
  HOTEL_ADMIN
  HOTEL_AUX
  HOTEL_GUEST
}

model UserSistema {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  email     String?   @unique
  nombre    String?
  rol       Rol       @default(HOTEL_GUEST)
  hotels    Hotel[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  auditLogs AuditLog[]
}

model Department {
  id        Int       @id @default(autoincrement())
  nombre    String
  hotel     Hotel     @relation(fields: [hotelId], references: [id])
  hotelId   Int
  deletedAt DateTime?
  areas     Area[]
  @@unique([nombre, hotelId]) 
}

model Area {
  id             Int        @id @default(autoincrement())
  nombre         String
  hotel          Hotel      @relation(fields: [hotelId], references: [id])
  hotelId        Int
  departamento   Department @relation(fields: [departamentoId], references: [id])
  departamentoId Int
  deletedAt      DateTime?
  users          User[]     
  devices        Device[]
  @@unique([nombre, departamentoId, hotelId])
}

model OperatingSystem {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  deletedAt DateTime?
  devices   Device[]
}

model DeviceType {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  deletedAt DateTime?
  devices   Device[]
}

model DeviceStatus {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  deletedAt DateTime?
  devices   Device[]
}

model User { 
  id              Int       @id @default(autoincrement())
  nombre          String
  correo          String?
  usuario_login   String?
  es_jefe_de_area Boolean   @default(false)
  area            Area?     @relation(fields: [areaId], references: [id])
  areaId          Int?
  hotel           Hotel     @relation(fields: [hotelId], references: [id])
  hotelId         Int
  created_at      DateTime  @default(now())
  deletedAt       DateTime?
  devices         Device[]
  @@index([areaId])
  @@index([hotelId])
}

model Device {
  id                       Int       @id @default(autoincrement())
  hotel                    Hotel     @relation(fields: [hotelId], references: [id])
  hotelId                  Int
  
  etiqueta                 String?
  nombre_equipo            String
  descripcion              String?
  comentarios              String?   @db.Text
  ip_equipo                String
  perfiles_usuario         String?
  usuario                  User?     @relation(fields: [usuarioId], references: [id])
  usuarioId                Int?
  area                     Area?     @relation(fields: [areaId], references: [id])
  areaId                   Int?
  tipo                     DeviceType @relation(fields: [tipoId], references: [id])
  tipoId                   Int
  marca                    String
  modelo                   String
  numero_serie             String    
  estado                   DeviceStatus @relation(fields: [estadoId], references: [id])
  estadoId                 Int
  sistema_operativo        OperatingSystem? @relation(fields: [sistemaOperativoId], references: [id])
  sistemaOperativoId       Int?
  licencia_so              String?
  office_version           String?
  office_tipo_licencia     String?
  office_serial            String?
  office_key               String?
  es_panda                 Boolean   @default(false)
  garantia_inicio          DateTime?
  garantia_fin             DateTime?
  garantia_numero_producto String?
  garantia_numero_reporte  String?
  garantia_notes           String?   @db.Text
  fecha_proxima_revision   DateTime?
  fecha_baja               DateTime?
  motivo_baja              String?
  observaciones_baja       String?   @db.Text
  created_at               DateTime  @default(now())
  updated_at               DateTime  @updatedAt
  deletedAt                DateTime?
  maintenances             Maintenance[]
  @@index([hotelId])
  @@index([usuarioId])
  @@unique([numero_serie, hotelId]) 
}

model Maintenance {
  id                  Int       @id @default(autoincrement())
  descripcion         String
  fecha_programada    DateTime
  fecha_realizacion   DateTime?
  estado              String    @default("pendiente")
  tipo_mantenimiento  String    @default("Preventivo") 
  diagnostico         String?   @db.Text
  acciones_realizadas String?   @db.Text
  observaciones       String?   @db.Text
  device              Device    @relation(fields: [deviceId], references: [id])
  deviceId            Int
  hotel               Hotel     @relation(fields: [hotelId], references: [id])
  hotelId             Int
  deletedAt           DateTime?
  @@index([deviceId])
  @@index([hotelId])
}

model AuditLog {
  id          Int          @id @default(autoincrement())
  action      String       
  entity      String       
  entityId    Int        
  oldData     Json?
  newData     Json?
  details     String?
  ipAddress   String?      
  userAgent   String?
  createdAt   DateTime     @default(now())
  userId      Int?
  user        UserSistema? @relation(fields: [userId], references: [id])
  hotelId     Int?
  @@index([userId])           
  @@index([hotelId])        
}